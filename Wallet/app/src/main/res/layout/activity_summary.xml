                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_transfer_actual"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_transfer_diff"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:text="Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_total_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="onClick"
                android:clickable="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_total_budget"
                android:layout_centerHorizontal="true"
                android:textColor="#ff008eff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_total_actual"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_total_diff"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tablelayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tablelayout1"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_space"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="Recurring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_specific_type1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <TextView
                android:text="Budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_specific_budget"
                android:layout_centerHorizontal="true"
                android:textColor="#ff008eff"
                android:textStyle="bold" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_specific_budget_value"
                android:layout_centerHorizontal="true"
                android:textColor="#ff008eff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_specific_type2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <TextView
                android:text="Actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_specific_actual"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_specific_actual_value"
                android:layout_centerHorizontal="true"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_specific_type3"
