<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thinus.wallet.Summary">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:text="Recurring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_recurring_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_recurring_actual"
                android:layout_centerHorizontal="true"
                android:textColor="#ff008eff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_recurring_budget"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_recurring_diff"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:text="Day-to-Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_daytoday_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_daytoday_actual"
                android:layout_centerHorizontal="true"
                android:textColor="#ff008eff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_daytoday_budget"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_daytoday_diff"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:text="Income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_income_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_income_actual"
                android:layout_centerHorizontal="true"
                android:textColor="#ff008eff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_income_budget"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_income_diff"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:text="Transfers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_transfer_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_transfer_actual"
                android:layout_centerHorizontal="true"
                android:textColor="#ff008eff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_transfer_budget"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_transfer_diff"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:text="Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_total_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_total_actual"
                android:layout_centerHorizontal="true"
                android:textColor="#ff008eff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_total_budget"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true"
                android:textColor="#ff00fa00" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/textView_total_diff"
                android:layout_below="@+id/textView_recurringvalue"
                android:layout_alignLeft="@+id/textView_recurringvalue"
                android:layout_centerHorizontal="true" />
        </TableRow>

    </TableLayout>


</RelativeLayout>
