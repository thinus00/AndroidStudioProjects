<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thinus.wallet.CategoryAddActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:id="@+id/textView_name"
        android:layout_alignBottom="@+id/editText_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_name"
        android:textSize="20dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText_budget"
        android:layout_alignStart="@+id/editText_budget"
        android:layout_alignRight="@+id/editText_budget"
        android:layout_alignEnd="@+id/editText_budget" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:id="@+id/textView_type"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/spinner_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:singleLine="true"
        android:layout_below="@+id/editText_name"
        android:layout_alignLeft="@+id/editText_budget"
        android:layout_alignStart="@+id/editText_budget"
        android:layout_alignRight="@+id/editText_budget"
        android:layout_alignEnd="@+id/editText_budget"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget"
        android:id="@+id/textView_budget"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/editText_budget"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_budget"
        android:layout_below="@+id/textView_type"
        android:layout_toRightOf="@+id/textView_budget" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:textSize="20dp"
        android:id="@+id/textView_smsdesc"
        android:layout_alignTop="@+id/editText_smsdesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_smsdesc"
        android:textSize="20dp"
        android:layout_below="@+id/editText_budget"
        android:layout_alignLeft="@+id/editText_budget"
        android:layout_alignStart="@+id/editText_budget"
        android:layout_alignRight="@+id/editText_budget"
        android:layout_alignEnd="@+id/editText_budget"
        android:layout_above="@+id/button_save" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button_save"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText_smsdesc"
        android:layout_alignStart="@+id/editText_smsdesc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/button_delete"
        android:layout_below="@+id/editText_smsdesc"
        android:layout_toRightOf="@+id/button_save"
        android:layout_toEndOf="@+id/button_save" />



</RelativeLayout>
